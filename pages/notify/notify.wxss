@import '/styles/iconfont.wxss';
.hidden {
  display: none;
}
.box {
  background-color: #edeeee;
  height: 100vh;
  overflow: auto;
}
.header {
  position: sticky;
  top: 0;
  z-index: 5;
}
.notify-box {
  border-radius: 20rpx;
  box-shadow: 0px 1px 43px 0px rgba(97, 161, 252, 0.06);
  width: calc(100% - 80rpx);
  padding: 0 18rpx;
  margin: 15rpx auto 0;
  background-color: #fff;
}
/* 添加按钮 */
.addBtn {
  border-radius: 50%;
  background-color: rgb(97, 182, 253);
  box-shadow: 0rpx 4rpx 21rpx 0rpx rgba(0, 0, 0, 0.19);
  width: 116rpx;
  height: 116rpx;
  text-align: center;
  line-height: 116rpx;
  color: #fff;
  position: fixed;
  bottom: -116rpx;
  right: 60rpx;
  transition: bottom .3s,background-color .2s;
}
.addBtn.show {
  bottom: 100rpx;
}
.addBtn.active {
  /* box-shadow: 0rpx 2rpx 8rpx 0rpx rgba(0, 0, 0, 0.16); */
  background-color: rgb(57, 166, 255);
}
.addBtn>.icontianjia {
  font-size: 40rpx;
}