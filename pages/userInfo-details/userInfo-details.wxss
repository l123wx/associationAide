page {
  background-color: #eee;
}
.header {
  height: 293rpx;
  background-color: #fff;
  text-align: center;
}
.header .avatar {
  width: 150rpx;
  height:150rpx;
  border-radius: 50%;
  margin-top: 31rpx;
}
.header .name {
  font-size: 30rpx;
  color: #000;
  margin-top: 10rpx;
}
.list_box {

}
.list_box>.top {
  background-color: #ededed;
  font-size: 22rpx;
  color: #707070;
  padding: 16rpx 20rpx;
}
.list_box>.content {
  background-color: #fff;
}
.list {
  height: 98rpx;
  width: calc(100% - 90rpx);
  background-color: #fff;
  border-top: 2rpx solid #f5f5f5;
  transition: background-color .2s;
  padding: 0 44rpx;
}
.list .iconfont {
  font-size: 50rpx;
  line-height: 98rpx;
  display: inline-block;
}
.list .title {
  font-size: 30rpx;
  color: #7d7d7d;
  display: inline-block;
  vertical-align: top;
  line-height: 98rpx;
  margin-left: 44rpx;
}
.list .content {
  font-size: 28rpx;
  color: #b5b5b5;
  line-height: 98rpx;
  float: right;
}
.list .content>switch {
  transform: scale(0.8,0.8);
  margin-right: -18rpx;
}
.list .iconfont:nth-child(3) {
  float: right;
  font-size: 36rpx;
  color: #b5b5b5; 
  margin: 0 30rpx;
}
.list .iconjiantouxiadown {
  transform: rotate(-90deg);
}
/* 按钮 */
.button.button {
  width: 710rpx;
  background-color: #e81d2d;
  text-align: center;
  height: 82rpx;
  line-height: 82rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #fff;
  padding: 0;
  margin: 56rpx auto 43rpx;
}