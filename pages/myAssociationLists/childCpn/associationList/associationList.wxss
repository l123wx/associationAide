@import "/styles/iconfont";
.box {
  padding: 0;
  height: 175rpx;
  width: 710rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 auto 20rpx;
  display: flex;
  position: relative;
  transition: background-color .2s;
}
.box.active {
  background-color: #f3f3f3;
}
.logo {
  width: 93rpx;
  height: 93rpx;
  position: relative;
  margin: 40rpx 20rpx 0 40rpx;
}
.logo_img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  line-height: 175rpx;
}
/* 消息提示 */
.tips {
  background-color: #ff0000;
  color: #fff;
  font-size: 24rpx;
  height: 32rpx;
  border-radius: 100rpx;
  position: absolute;
  right: -8rpx;
  top: -8rpx;
  text-align: center;
  line-height: 32rpx;
  padding: 0 10rpx;
}
.info {
  display: inline-block;
  margin-top: 46rpx;
}
.info_name {
  font-size: 30rpx;
}
.info_intro {
  color: #959595;
  font-size: 24rpx;
  margin-top: 10rpx;
  max-width: 410rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.icon {
  position: absolute;
  right: 16rpx;
}
.icon>text {
  font-size: 50rpx;
  display: inline-block;
  transform: rotate(-90deg);
  color: #a0a0a0;
  line-height: 175rpx;
}