.box {
  position: relative;
  padding-top: 78rpx; 
}
.background {
  height: 225rpx;
  width: 100%;
  background-color: #61b8fd;
  position: absolute;
  top: 0;
  z-index: 0;
}
.info {
  height: 274rpx;
  width: 710rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 auto;
  position: relative;
}
.avatar {
  border: 4rpx solid #fff;
  height: 140rpx;
  width: 140rpx;
  border-radius: 50%;
  margin: 0 auto -70rpx;
  top: -70rpx;
  position: relative;
  background-color: #bfbfbf;
  overflow: hidden;
}
.avatar>image {
  width: 100%;
  height: 100%;
}

.name {
  font-size: 28rpx;
  color: #313131;
  text-align: center;
  margin-top: 10rpx;
}
.association_Num {
  display: flex;
  margin-top: 40rpx;
}
.association_Num>view {
  flex: 1;
  text-align: center;
}
.association_Num>view>view:nth-child(1) {
  font-size: 24rpx;
  color: #707070;
}
.association_Num>view>view:nth-child(2) {
  font-size: 30rpx;
  color: #61b6fd;
  margin-top: 10rpx;
}
