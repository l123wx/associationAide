@import "/styles/iconfont";
.box {
  height: 168rpx;
  background-color: #fff;
  border-bottom: 1px solid #dcdcdc;
  display: flex;
  position: relative;
  transition: background-color .2s;
}
.box:active {
  background-color: #f3f3f3;
}
.logo {
  width: 88rpx;
  height: 88rpx;
  position: relative;
  margin: 27rpx 30rpx 0 30rpx;
}
.logo_img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.info {
  display: inline-block;
  margin-top: 30rpx;
}
.info_name {
  font-size: 30rpx;
}
.info_intro {
  color: #959595;
  font-size: 24rpx;
  margin-top: 2rpx;
  max-width: 430rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.info_label {
  margin-top: -2rpx;
}
.info_label > view {
  font-size: 20rpx;
  color: #fff;
  background-color: #bfbfbf;
  display: inline-block;
  padding: 1rpx 10rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}
.info_label > view.num {
  background-color: #2ac3b4;
}
.info_label > view.num>text {
  font-size: 20rpx;
  display: inline-block;
  margin: 0 -2rpx;
}
.info_label > view.type {
  background-color: #8ccd26;
}
.info_label > view.class {
  background-color: #7ecef4;
}
.icon {
  position: absolute;
  right: 16rpx;
  overflow: hidden;
}
.icon>text {
  font-size: 50rpx;
  display: inline-block;
  transform: rotate(-90deg);
  color: #a0a0a0;
  line-height: 175rpx;
}