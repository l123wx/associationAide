<view class="box" wx:if="{{phone||wechat||qqGroup||mail||publicWechatPublicCode}}">
  <view class="title">联系方式</view>
  <view class="contact">
    <view wx:if="{{phone}}">
      <view class="iconfont iconshouji"></view>
      <view>手机：</view>
      <view>{{phone}}</view>
    </view>
    <view wx:if="{{wechat}}">
      <view class="iconfont iconweixin"></view>
      <view>微信号：</view>
      <view>{{wechat}}</view>
    </view>
    <view wx:if="{{qqGroup}}">
      <view class="iconfont iconqq"></view>
      <view>QQ群：</view>
      <view>{{qqGroup}}</view>
    </view>
    <view wx:if="{{mail}}">
      <view class="iconfont iconyouxiang"></view>
      <view>邮箱：</view>
      <view>{{mail}}</view>
    </view>
    <view wx:if="{{publicWechatPublicCode}}">
      <view class="iconfont icongongzhonghao"></view>
      <view>微信公众号：</view>
      <view>{{publicWechatPublicCode}}</view>
    </view>
  </view>
</view>