@import '/styles/iconfont.wxss';
.box {
  padding-top: 24rpx;
}
.box>view {
  width: 710rpx;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0px 1px 43px 0px rgba(97, 161, 252, 0.06);
  padding: 20rpx 0;
  margin-bottom: 24rpx;
}

.title {
  font-size: 24rpx;
  color: #000;
  line-height: 26rpx;
  padding-left: 20rpx;
}
.functions {
  padding: 10rpx 32rpx 0;
}
.functionBox {
  width: 160rpx;
  height: 162rpx;
  text-align: center;
  display: inline-block;
}
.icon>text {
  font-size: 50rpx;
  line-height: 50rpx;
  margin-top: 38rpx;
  display: inline-block;
  -webkit-background-clip: text;
  background-clip: text;
  box-decoration-break: clone;
  -webkit-box-decoration-break: clone;
  -moz-box-decoration-break: clone;
  color: transparent;
  position:relative;
}
.functionBox>.name {
  font-size: 26rpx;
  line-height: 26rpx;
  color: #959595;
  margin-top: 20rpx;
}