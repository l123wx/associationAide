.title {
  font-size: 30rpx;
  color: #000;
  line-height: 30rpx;
  text-align: center;
  margin-top: 48rpx;
}
.title+view {
  padding: 0 62rpx;
}
.intro {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #bfbfbf;
  margin-top: 36rpx;
}
.field-index--van-field.van-cell {
  background-color: #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 18rpx;
}
.van-field__input.van-field__input--textarea {
  font-size: 24rpx;
  min-height: 240rpx;
}
.van-field__word-limit.van-field__word-limit {
  color: #bfbfbf;
}
.van-field__word-num {
  color: #bfbfbf;
}
.button {
  width:700rpx;
  height: 88rpx;
  background-color: #61b6fd;
  font-size: 30rpx;
  line-height: 88rpx;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
  transition: background-color .2s;
  position: fixed;
  bottom: 43rpx;
  left: 50%;
  transform: translate(-50%,0);
}