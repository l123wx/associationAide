@import "/styles/iconfont.wxss";

.box {
  width: 100%;
  height: 67rpx;
  background-color: #61b6fd;
  display: flex;
  position: relative;
}
.box>view:not(.line) {
  flex: 1;
  line-height: 60rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
.box>view>.iconfont {
  margin-left: -10rpx;
  display: inline-block;
}
.line {
  position: absolute;
  left: 0;
  bottom: 0;
  height: 5rpx;
  background-color: #fff;
  width: 100rpx;
  transition: left .3s;
}