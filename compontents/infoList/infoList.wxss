@import "/styles/iconfont";

.box {
  height: 98rpx;
  width: calc(100% - 4rpx);
  background-color: #fff;
  border-top: 2rpx solid #f5f5f5;
  transition: background-color .2s;
}
.box:active {
  background-color: #f3f3f3;
}
.iconfont {
  font-size: 50rpx;
  line-height: 98rpx;
  margin-left: 44rpx;
  display: inline-block;
}
.title {
  font-size: 30rpx;
  color: #7d7d7d;
  display: inline-block;
  vertical-align: top;
  line-height: 98rpx;
  margin-left: 44rpx;
}
.content {
  font-size: 28rpx;
  color: #b5b5b5;
  line-height: 98rpx;
  float: right;
}
.iconfont:nth-child(3) {
  float: right;
  font-size: 36rpx;
  color: #b5b5b5; 
  margin: 0 30rpx;
}
.iconjiantouxiadown {
  transform: rotate(-90deg);
}